# Refresh interval in minutes for background ingestion
REFRESH_MINUTES=15

# SQLite DB path (absolute or relative). By default we use the repo path.
SQLITE_PATH=e:/Hakaton/newsbrief/newsbrief.db

# Allowed origins for CORS (comma-separated). Example: https://your-frontend.netlify.app
ALLOW_ORIGINS=

# Telegram bot settings
# Token from @BotFather
TELEGRAM_BOT_TOKEN=
# API base URL that the bot will call (point to your deployed API or local dev)
# Example for local dev: http://127.0.0.1:8000
API_BASE=http://127.0.0.1:8000
# Default number of news items for /top
BOT_TOP_LIMIT=5
